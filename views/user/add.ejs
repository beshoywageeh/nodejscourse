<!DOCTYPE html>
<html lang="en" data-bs-theme="auto">
  <head>
    <script src="../js/color-modes.js"></script>
    <link
    rel="stylesheet"
    href="./bootstrap-icons-1.10.5/font/bootstrap-icons.min.css"
    />
    
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="" />
    <meta
    name="author"
    content="Mark Otto, Jacob Thornton, and Bootstrap contributors"
    />
    <meta name="generator" content="Hugo 0.112.5" />
    <title><%= title %></title>
    
    <link href="./css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="./css/light_dark.css" />
    <!-- Custom styles for this template -->
    <link href="./css/sidebars.css" rel="stylesheet" />
    <link rel="stylesheet" href="./css/myStyle.css" />
  </head>
  <body>
    <%- include('../components/theme_toogle.ejs') %>

    <main class="d-flex flex-nowrap">
      <%- include('../components/sidebar.ejs',{currentPage:'add_record'}) %>

      <div class="b-example-divider b-example-vr"></div>

      <section class="w-100">
        <%- include('../components/nabar.ejs') %>

        <form class="mx-0 row gx-3 gy-4 mt-3" action="/add_record" method="POST">
          <div class="col-md-6 mb-3">
            <label for="status" class="form-label">الحالى</label>
           <select class="form-select" name="status" id="">
            <option value="0">داخل</option>
            <option value="1">خارج</option>
           </select>
          </div>

          <div class="col-md-6 mb-3">
            <label for="description" class="form-label">الوصف</label>
            <input
              type="text"
              class="form-control"
              id="description"
              name="description"
              required
            />
          </div>

          <div class="col-md-6 mb-3">
            <label for="amount" class="form-label">القيمة</label>
            <input
              type="number"
              class="form-control"
              id="amount"
              name="amount"
              required
            />
          </div>

          <div class="col-md-6 mb-3">
            <label for="date" class="form-label">التاريخ</label>
            <input
              type="date"
              class="form-control"
              id="date"
              name="date"
              required
            />
          </div>

          <div class="col-12">
            <button type="submit" class="btn btn-primary">حفظ</button>
          </div>
        </form>
      </section>
    </main>
    <script src="../js/bootstrap.bundle.min.js"></script>

    <script src="../js/sidebars.js"></script>
    <script src="../js/main.js"></script>
  </body>
</html>
