<!DOCTYPE html>
<html lang="en" data-bs-theme="auto">
  <head>
    <script src="../js/color-modes.js"></script>
    <link
    rel="stylesheet"
    href="../bootstrap-icons-1.10.5/font/bootstrap-icons.min.css"
    />
    
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="" />
    <meta
    name="author"
    content="Mark Otto, Jacob Thornton, and Bootstrap contributors"
    />
    <meta name="generator" content="Hugo 0.112.5" />
    <title><%= title %></title>
    
    <link href="../css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="../css/light_dark.css" />
    <!-- Custom styles for this template -->
    <link href="../css/sidebars.css" rel="stylesheet" />
    <link rel="stylesheet" href="../css/myStyle.css" />

  </head>
  <body>
    <%- include('../components/theme_toogle.ejs') %>

 

    <main class="d-flex flex-nowrap">
      <%- include('../components/sidebar.ejs',{currentPage:"edit"}) %>


      <div class="b-example-divider b-example-vr"></div>

      <section class="w-100">
        <%- include('../components/nabar.ejs') %>


        <nav class="px-2 mt-4 d-flex flex-wrap justify-content-between" aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page"><%= data.id %></li>
          </ol>


          <p class="me-md-5"> <span class="fw-medium fs-6">Id :</span> <%= data.id %></p>
        </nav>
        <form class="mx-0 row gx-3 gy-4 mt-2" action="/update/<%= data.id %>?_method=PUT" method="POST">
          <div class="col-md-6 mb-3">
            <label for="status" class="form-label">الحالى</label>
           <select class="form-select" name="status" id="">
            <option <%= (data.status=="0")?"selected":"" %> value="0">داخل</option>
            <option  <%= (data.status=="1")?"selected":"" %> value="1">خارج</option>
           </select>
          </div>

          <div class="col-md-6 mb-3">
            <label for="description" class="form-label">الوصف</label>
            <input value="<%= data.description %>"
              type="text"
              class="form-control"
              id="description"
              name="description"
              required
            />
          </div>

          <div class="col-md-6 mb-3">
            <label for="amount"  class="form-label">القيمة</label>
            <input value="<%= data.amount %>"
              type="number"
              class="form-control"
              id="amount"
              name="amount"
              required
            />
          </div>

          <div class="col-md-6 mb-3">
            <label for="date"  class="form-label">التاريخ</label>
            <input value="<%= moment(data.date).format('dd/mm/yyyy') %>"
              type="date"
              class="form-control"
              id="date"
              name="date"
              required
            />
          </div>

          <div class="col-12">
            <button type="submit" class="btn btn-primary">
              تعديل
            </button>
            <button
              data-bs-toggle="modal"
              data-bs-target="#exampleModal"
              type="button"
              class="btn btn-danger"
            >
              حذف
            </button>
          </div>
        </form>
      </section>

      <!-- Modal -->
      <div
        class="modal fade"
        id="exampleModal"
        tabindex="-1"
        aria-labelledby="exampleModalLabel"
        aria-hidden="true"
      >
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h1 class="modal-title fs-5" id="exampleModalLabel">
                حذف
              </h1>
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="modal"
                aria-label="Close"
              ></button>
            </div>
            <div class="modal-body">هل متاكد من الحذف</div>
            <div class="modal-footer">
              <button
                type="button"
                class="btn btn-secondary"
                data-bs-dismiss="modal"
              >
                الغاء
              </button>
              <form method="POST" action="/delete/<%= data.id %>?_method=DELETE">
                <button type="submit" class="btn btn-danger">
                  حذف
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </main>
    <script src="../js/bootstrap.bundle.min.js"></script>

    <script src="../js/sidebars.js"></script>
    <script src="../js/main.js"></script>
  </body>
</html>
