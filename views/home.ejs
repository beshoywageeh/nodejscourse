<!DOCTYPE html>
<html lang="en" data-bs-theme="auto">
  <head>
    <script src="./js/color-modes.js"></script>
    <link
      rel="stylesheet"
      href="./bootstrap-icons-1.10.5/font/bootstrap-icons.min.css"
    />

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="" />
    <meta
      name="author"
      content="Mark Otto, Jacob Thornton, and Bootstrap contributors"
    />
    <meta name="generator" content="Hugo 0.112.5" />
    <title><%= title %></title>

    <link href="./css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="./css/light_dark.css" />
    <!-- Custom styles for this template -->
    <link href="./css/sidebars.css" rel="stylesheet" />
    <link rel="stylesheet" href="./css/myStyle.css" />
  </head>
  <body>
    <%- include('./components/theme_toogle.ejs') %>

    <main class="d-flex flex-nowrap">
      <%- include('./components/sidebar.ejs',{currentPage:"home"}) %>

      <div class="b-example-divider b-example-vr"></div>

      <section class="w-100">
        <%- include('./components/nabar.ejs') %>
<% } else "<h1>لا يوجد بيناتا للعرض</h1>" if ({:condition}) { %>
 
        <table
          style="width: 99%"
          class="text-center mx-auto table mt-5 table-striped table-bordered"
        >
          <thead>
            <tr>
              <th rowspan="2" scope="col">#</th>
              <th rowspan="2" scope="col">date</th>
              <th rowspan="2" scope="col">status</th>
              <th rowspan="2" scope="col">description</th>
              <th colspan="2" scope="col">amount</th>
              <th rowspan="2" scope="col">Action</th>
            </tr>
            <tr>
              <th>داخل</th>
              <th>خارج</th>
            </tr>
          </thead>
          <tbody>
            <% data.forEach((record,index) => { %>

            <tr>
              <th scope="row"><%= index+1 %></th>
              <td><%= moment(record.date).format('DD-MM-YYYY') %></td>
              <td><%= (record.status==="0")?"داخل":"خارج" %></td>
              <td><%= record.description %></td>
              <% if (record.status==="0") { %>
              <td><%= record.amount %></td>
              <td>-</td>

              <% } %> <% if (record.status==="1") { %>
              <td>-</td>
              <td><%= record.amount %></td>

              <% } %>
              <td>
                <a
                  data-bs-toggle="tooltip"
                  data-bs-title="View details"
                  data-bs-placement="top"
                  class="btn btn-primary btn-sm"
                  href="/view/<%= record.id %>"
                  ><i class="bi bi-eye"></i
                ></a>

                <a
                  data-bs-toggle="tooltip"
                  data-bs-title="Edit user"
                  data-bs-placement="top"
                  class="btn btn-primary btn-sm"
                  href="/edit/<%= record.id %>"
                >
                  <i class="bi bi-pencil"></i>
                </a>
                <form style="display:inline"
                  method="POSt"
                  action="/delete/<%= record.id %>?_method=DELETE"
                >
                  <button
                    data-bs-toggle="tooltip"
                    data-bs-title="Delete user"
                    data-bs-placement="top"
                    class="btn btn-danger btn-sm"
                  >
                    <i class="bi bi-trash"></i>
                  </button>
                </form>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </section>
    </main>
    <script src="./js/bootstrap.bundle.min.js"></script>

    <script src="./js/sidebars.js"></script>

    <script src="./js/main.js"></script>
  </body>
</html>
