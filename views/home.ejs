<!DOCTYPE html>
<html lang="en" data-bs-theme="auto">
  <head>
    <script src="./js/color-modes.js"></script>
    <%- include('./components/styles.ejs') %>
  </head>
  <body>
    <%- include('./components/theme_toogle.ejs') %>

    <main class="d-flex flex-nowrap">
      <%- include('./components/sidebar.ejs',{currentPage:"home"}) %>

      <div class="b-example-divider b-example-vr"></div>

      <section class="w-100">
        <%- include('./components/nabar.ejs') %>

        <table
          style="width: 99%"
          class="text-center mx-auto table mt-5 table-striped table-bordered"
        >
          <thead>
            <tr>
              <th rowspan="2" scope="col">#</th>
              <th rowspan="2" scope="col">date</th>
              <th rowspan="2" scope="col">status</th>
              <th rowspan="2" scope="col">description</th>
              <th colspan="2" scope="col">amount</th>
              <th rowspan="2" scope="col">Action</th>
            </tr>
            <tr>
              <th>داخل</th>
              <th>خارج</th>
            </tr>
          </thead>
          <tbody>
            <% data.forEach(record => { %>
            <tr>
              <th scope="row">1</th>
              <td><%= record.date %></td>
              <td><%= (record.status==="0")?"داخل":"خارج" %></td>
              <td><%= record.description %></td>
              <% if (record.status==="0") { %>
                <td><%= record.amount %></td>
                <td>-</td>
               
              <% } %>
              <% if (record.status==="1") { %>
                <td>-</td>
                <td><%= record.amount %></td>
               
              <% } %>
              <td>
                <a
                  data-bs-toggle="tooltip"
                  data-bs-title="View details"
                  data-bs-placement="top"
                  class="btn btn-primary btn-sm"
                  href="/view"
                  ><i class="bi bi-eye"></i
                ></a>

                <a
                  data-bs-toggle="tooltip"
                  data-bs-title="Edit user"
                  data-bs-placement="top"
                  class="btn btn-primary btn-sm"
                  href="/edit"
                >
                  <i class="bi bi-pencil"></i>
                </a>
                <button
                  data-bs-toggle="tooltip"
                  data-bs-title="Delete user"
                  data-bs-placement="top"
                  class="btn btn-danger btn-sm"
                >
                  <i class="bi bi-trash"></i>
                </button>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </section>
    </main>
    <script src="./js/bootstrap.bundle.min.js"></script>

    <script src="./js/sidebars.js"></script>

    <script src="./js/main.js"></script>
  </body>
</html>
